- page = params[:p] ? params[:p].to_i : 1

#slide
  - case page
  - when 1
    %h2
      == Bookmarkers
    %ol
      %li
        %a{ :href => "http:bookmarkers.heroku.com", :target => "_blank" }
          == bookmarkers.heroku.com
        %small== - non-writable
      %li== or
      %li
        %a{ :href => "http:bookmarkers.calebkm.com:4567", :target => "_blank" }
          == bookmarkers.calebkm.com:4567
        %small== - writable!
  - when 2
    %h2
      == Gems
    %ol
      %li
        %a{ :href => "http://www.sinatrarb.com", :target => "_blank" }
          == Sinatra
      %li
        %a{ :href => "http://rubygems.org/gems/haml", :target => "_blank" }
          == Haml 
      %li
        %a{ :href => "http://www.yaml.org", :target => "_blank" }
          == Yaml
        %small== (built into 1.9.2) - "database"
      %li
        %a{ :href => "https://github.com/attack/barometer", :target => "_blank" }
          == Barometer
        %small== - wundeground weather
      %li
        == (
        %a{ :href => "http://rubygems.org/gems/thin", :target => "_blank" }
          == Thin
        %small== - at calebkm.com
        == )
  - when 3
    %h2
      == Classes
    %ol
      %li
        == Database
        %small== - open/read/write YAML db file(s)
      %li
        == Bookmarker
        %small== - hold bookmarks: url, title, note
      %li
        == Widget
        %small== - 'section' for bookmarks: title, bookmarkers
      %li
        == Weather
        %small== - wrapper for Barometer gem
    
    
  - when 4
    %h2
      == To do
    %ol
      %li== Clean up: HAML && HTML && CSS && etc
      %li== Registration and Login
      %li== Amazon S3
      %li== Sass
      
      
  .num
    - if page == 1
      = "<span style='color:#666'>&larr;</span>&nbsp;&nbsp;"
    - else
      = "<a href='/slides?p=#{page-1}'>&larr;</a>&nbsp;&nbsp;"
    = page
    - if page == 4
      = "&nbsp;&nbsp;<span style='color:#666'>&rarr;</span>"
    - else
      = "&nbsp;&nbsp;<a href='/slides?p=#{page+1}'>&rarr;</a>"